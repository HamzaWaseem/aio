<p id="notice"><%= notice %></p>

<h1>Car Modifications</h1>

<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Rates</th>
      <th>Body</th>
      <th>Published at</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @car_modifications.each do |car_modification| %>
      <tr>
        <td><%= car_modification.title %></td>
        <td><%= car_modification.rates %></td>
        <td><%= car_modification.body %></td>
        <td><%= car_modification.published_at %></td>
        <td><%= link_to 'Show', car_modification %></td>
        <td><%= link_to 'Edit', edit_car_modification_path(car_modification) %></td>
        <td><%= link_to 'Destroy', car_modification, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

